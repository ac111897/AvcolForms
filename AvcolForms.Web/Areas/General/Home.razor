@page "/"
@using AvcolForms.Core.Notifications
@attribute [Authorize]
@inject INotificationService _notificationService;
@inject AuthenticationStateProvider authenticationStateProvider

<PageTitle>Home</PageTitle>

<MudBreadcrumbs Items="@items"></MudBreadcrumbs>

<MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Home</MudText>

@if (_fetchedNotifications) {
    if (_alerts.Any()) {
        foreach (var item in _alerts) {
            <MudAlert Severity="@item.Severity.UserAlertSeverityToMud()">@item.Message</MudAlert>
        }
    }
    else
    {
        <MudText>No Notifications Available</MudText>
    }
}
else {
    <MudText>Getting Notifications . . .</MudText>
}