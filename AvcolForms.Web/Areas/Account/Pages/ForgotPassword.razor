@page "/account/forgot_password"

<PageTitle>Forgot Password</PageTitle>

<MudBreadcrumbs Items="@items"></MudBreadcrumbs>


@if (!success)
{
    @if (error is not null)
    {
        <MudAlert Severity="Severity.Error">
            @error
        </MudAlert>
    }
}

@if (processing)
{
    <MudProgressLinear Color="Color.Primary" Striped="true" Size="Size.Large" Value="75" Class="my-7" />
}

<EditForm Model="@Email" OnValidSubmit="@ProcessAsync">
<ValidationSummary/>
<MudGrid>
</MudGrid>
</EditForm>