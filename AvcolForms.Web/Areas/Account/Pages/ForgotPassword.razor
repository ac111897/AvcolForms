@page "/account/forgot_password"

<PageTitle>Forgot Password</PageTitle>

<MudBreadcrumbs Items="@items"></MudBreadcrumbs>


@if (!success)
{
    @if (message is not null)
    {
        <MudAlert Severity="Severity.Error">
            @message
        </MudAlert>
    }
}

@if (processing)
{
    <MudProgressLinear Color="Color.Primary" Striped="true" Size="Size.Large" Value="75" Class="my-7" />
}

<EditForm Model="@ForgotModel" OnValidSubmit="@ProcessAsync">
<ValidationSummary/>
<MudGrid>
    <MudItem xs="12" sm="7">
        <MudCard>
            <MudCardContent>
                <MudTextField Label="Email" 
                    For="@(() => ForgotModel.Email)" HelperText="The email of the forgotten password's account"
                    Required=true
                    @bind-Value="@ForgotModel.Email"></MudTextField>
            </MudCardContent>
            <MudCardActions>
                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" Disabled="@buttonLock">Send</MudButton>
            </MudCardActions>
        </MudCard>
    </MudItem>
</MudGrid>
</EditForm>